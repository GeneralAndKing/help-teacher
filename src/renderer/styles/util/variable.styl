// 主要颜色
success = #67C23A
warning = #E6A23C
danger = #F56C6C
info = #909399

// 字体区分
main-font = #303133
normal-font = #606266
secondary-font = #909399
placeholder-font = #C0C4CC

// 边框
first-border = #DCDFE6
second-border = #E4E7ED
third-border = #EBEEF5
fourth-border = #F2F6FC

// 导航颜色
menu-color = hsla(0, 0%, 100%, .4)
menu-hover-color = #fff

// 背景颜色渐变过渡
bg-color = linear-gradient(180deg, #315481, #918e82)

// 背景颜色透明
bg-transparent = rgba(0, 0, 0, 0.0)

// full
full-size = 100%

// 媒体查询
middle-size = 1300px
small-size = 1024px

// 字体
font-list = "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Arial, sans-serif

// 字体大小
normal-size = 18px

// 侧边栏过渡时间
fast-speed = 0.5s
normal-speed = 1s
slow-speed = 2s

// 侧边栏宽度
aside-width = 150px

// 统一内边距
normal-padding = 20px