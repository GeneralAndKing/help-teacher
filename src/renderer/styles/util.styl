@import "util/variable.styl"

.gak-text-left
  text-align left
.gak-text-center
  text-align center
.gak-text-right
  text-align right

.gak-text-placeholder
  color placeholder-font
  font-size small-normal-size

.gak-text-hidden
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

.gak-flex-center
  display flex
  align-items  center
  justify-content center

.gak-flex-column
  flex-direction column

.bg-success
  background-color success
.bg-primary
  background-color primary
.bg-warning
  background-color warning
.bg-danger
  background-color danger
.bg-info
  background-color info

.el-table .warning-row
  background oldlace

.el-table .success-row
  background #f0f9eb

.gak-tip-blue
  padding 8px 16px
  background-color #ecf8ff
  border-radius 4px
  border-left 5px solid #50bfff
  margin 20px 0
  font-size normal-size
  color #5e6d82
  line-height 1.5em
  text-align left