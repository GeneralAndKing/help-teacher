@import "../util"
#gak-main
  width full-size
  height full-size
  background-color white

  #gak-main-head
    background linear-gradient(180deg, #d0edf5, #e1e5f0)
    height 4em
    position relative

    #gak-main-head-title
      line-height 2.5
      font-size 1.125em
      float left
      transition width 2s
      -webkit-transition width 2s
      width 100px
      padding-left 60px
      padding-top 8px

    #gak-main-head-nav
      position absolute
      left 0
      padding 4px
      font-size 20px
      margin 1rem
      transition color 0.5s
      cursor pointer
      &:hover
        color white

    @media screen and (max-width: small-size )
      #gak-main-head-title
        padding-left 0
        width 100%

    @media screen and (mim-width: small-size )
      #gak-main-head-nav
        display none
